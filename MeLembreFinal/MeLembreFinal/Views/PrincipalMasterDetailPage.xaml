        <ContentPage Padding="10">
            <StackLayout>
                --><!--<Button BackgroundColor="Transparent" Text="Aniversários" TextColor="Orange"/>--><!--
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Detail>-->

</MasterDetailPage>